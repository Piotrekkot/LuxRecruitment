@{
    var isLoggedIn = Context.Request.Cookies.ContainsKey("AuthToken");
}
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="bi bi-heart-pulse-fill" style="color:var(--luxGreen); font-size:150%;"></i>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="ExchangeWeb" asp-action="Index">Kursy Walut</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                @if (isLoggedIn)
                {
                    <li class="nav-item">
                        <form method="post" action="/Account/Logout" class="d-inline">
                            <button type="submit" class="btn btn-danger">Wyloguj się</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/Account/Login">Zaloguj się</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>